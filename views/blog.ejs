<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="500px" alt="Cover Image" />
        <p><%= blog.body %></p>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImage %>" width="100px" alt="Profile Image" />
        <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" id="content" name="content" placeholder="Enter Your Comment">
                    <button class="btn btn-primary mt-2" type="submit">Add Comment</button>
                </div>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div class="mb-2">
                        <img src="<%= comment.createdBy.profileImage %>" width="50px" alt="Commenter Image" />
                        <strong><%= comment.createdBy.fullName %>:</strong>
                        <pre><%= comment.content %></pre>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>
